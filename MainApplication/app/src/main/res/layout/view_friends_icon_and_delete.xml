<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="16dip"
    android:layout_marginLeft="15dip"
    style="@style/wrap_content">
    
    <com.orange.barrage.android.user.ui.view.UserAvatarView

        android:id="@+id/iconUserAvatarView"
        android:src="@drawable/x_comments_bg"
        android:layout_width="@dimen/b_icon_size_44"
        android:layout_height="@dimen/b_icon_size_44" />

    <TextView
        android:id="@+id/icon_name_text"
        android:textSize="@dimen/b_list_view_font_medium"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#333333"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/b_icon_size_44"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/iconUserAvatarView" />

    <ImageButton
        android:id="@+id/icon_delete_button"
        android:layout_marginLeft="-14dip"
        android:src="@drawable/x_friends_delete"
        android:background="@color/b_color_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_toRightOf="@+id/iconUserAvatarView"
        android:layout_toEndOf="@+id/iconUserAvatarView" />
</RelativeLayout>
