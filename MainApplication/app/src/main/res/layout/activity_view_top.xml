<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:id="@+id/top_main"
    android:background="@drawable/title_top_bg">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/x_top_left_button_src"
            android:background="@color/b_color_alpha"
            android:scaleType="center"
            android:id="@+id/top_back_button"
            android:layout_centerVertical="true"/>
        <com.orange.barrage.android.util.view.NumberView
            android:id="@+id/Number"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="10sp"
            android:layout_toEndOf="@+id/top_back_button"
            android:layout_toRightOf="@+id/top_back_button"
            android:layout_alignTop="@+id/top_back_button"
            android:textColor="@color/white"
            android:layout_gravity="end"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/white"
        android:textSize="@dimen/b_font_navigation_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/top_right_button"
        style="@style/b_homepage_top_right_button"
        android:background="@color/b_color_alpha"
        android:src="@drawable/x_more_and_more"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/top_right_text"
        android:text="发送"
        android:textColor="@drawable/x_top_send"
        style="@style/b_homepage_top_right_button"
        android:textSize="15sp" />
</RelativeLayout>
