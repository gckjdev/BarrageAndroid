<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:id="@+id/top_main"
    android:background="@drawable/title_top_bg">

    <ImageButton
        android:text="back"
        android:layout_marginLeft="10dip"
        style="@style/wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickFinish"
        android:src="@drawable/x_top_back"
        android:background="#00000000"
        android:id="@+id/top_back_button" />

    <TextView
        android:id="@+id/top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/white"
        android:textSize="@dimen/b_font_navigation_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/top_right_button"
        style="@style/wrap_content"
        android:onClick="onClickRight"
        android:src="@drawable/x_more_and_more"
        android:background="@drawable/x_more_and_more"
        android:visibility="gone"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/top_right_text"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/top_right_text"
        android:text="发送"
        android:textColor="@drawable/x_top_send"
        style="@style/wrap_content"
        android:textSize="14dip"
        android:onClick="onClickRight"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dip" />
</RelativeLayout>
