<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="50dp"
    android:layout_height="50dp">

    <com.orange.barrage.android.user.ui.view.UserAvatarView
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/friend_avatar_view"
        android:layout_marginLeft="18dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="HelloWorld"
        android:id="@+id/friend_nick"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/friend_avatar_view"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="13dp" />
    <TextView
        android:text="您好"
        android:textSize="13sp"
        android:textColor="#848484"
        android:id="@+id/friend_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="17dp"
        android:layout_alignTop="@+id/friend_nick"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp" />
</RelativeLayout>