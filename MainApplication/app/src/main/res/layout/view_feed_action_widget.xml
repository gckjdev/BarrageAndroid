<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style = "@style/wrap_content"
    android:background="@color/b_color_alpha">
    <TextView
        android:id="@+id/commentsTextViewRight"
        style="@style/comments_right_text"
        android:layout_alignTop="@+id/commentsTextView"
        android:layout_toRightOf="@+id/commentsTextView"
        android:layout_toEndOf="@+id/commentsTextView" />
    <TextView
        android:id="@+id/commentsEditTextRight"
        style="@style/comments_right_text"
        android:layout_alignTop="@+id/commentsEditText"
        android:layout_toRightOf="@+id/commentsEditText"
        android:layout_toEndOf="@+id/commentsEditText" />
    <EditText
        android:id="@+id/commentsEditText"
        style="@style/comments"/>
    <TextView
        android:id="@+id/commentsTextView"
        style="@style/comments" />

    <!-- android:gravity="center_vertical" -->
    <com.orange.barrage.android.user.ui.view.UserAvatarView
        android:id="@+id/head"
        android:src="@drawable/x_comments_bg"
        android:layout_height="@dimen/b_comments_icon"
        android:layout_width="@dimen/b_comments_icon"/>



</RelativeLayout>