<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.orange.barrage.android.user.ui.user_home.UserModifyUserForresult">

    <include layout="@layout/activity_view_top" />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <com.orange.barrage.android.user.ui.view.ClearEditText
            android:layout_width="match_parent"
            android:hint=" 请重新输入新的昵称"
            android:background="@null"
            android:id="@+id/clearedittext"
            android:maxLength="15"
            android:drawableRight="@drawable/delete_gray"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp" />
        </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="好名字能让你的朋友更快记住你"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
