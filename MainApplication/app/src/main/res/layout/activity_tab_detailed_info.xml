<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_view_top" />

    <RelativeLayout
        android:layout_marginTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tabNameEidtext"
            style="@style/b_common_edit_text_style"
            android:visibility="gone"
            android:gravity="center" />

        <TextView
            android:id="@+id/tabNameTextView"
            style="@style/b_common_edit_text_style"
            android:visibility="gone"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="20dip"
        android:paddingLeft="18dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chengyuan"
            android:text="成员(0)"
            android:textSize="@dimen/b_list_view_font_medium"
            android:layout_marginTop="10dip"
            style="@style/wrap_content" />

        <com.orange.barrage.android.friend.ui.FriendIconList
            android:id="@+id/frinedIconlist"
            android:numColumns="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.orange.barrage.android.friend.ui.FriendIconList>

    </LinearLayout>

    <Button
        android:id="@+id/shareOrDeletebutton"
        android:layout_marginTop="10dip"
        android:onClick="onClickSharePhotOrDeleteTag"
        android:text="@string/b_share_photo"
        style="@style/b_button_color_red" />
</LinearLayout>
