<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_content"
    android:orientation="vertical">

    <include layout="@layout/activity_view_top"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="154dip">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:orientation="horizontal"
        android:background="#121212">

        <FrameLayout
            android:layout_weight="1"
            style="@style/match_content">
            <ImageButton
                android:layout_gravity="center"
                style="@style/wrap_content"/>
        </FrameLayout>
        <FrameLayout
            android:layout_weight="1"
            style="@style/match_content">
            <ImageButton
                android:layout_gravity="center"
                style="@style/wrap_content"/>
        </FrameLayout>
    </LinearLayout>

        <LinearLayout
        android:background="#e7e7e7"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dip">

        <ImageButton
            android:layout_marginLeft="30dip"
            android:layout_gravity="center"
            style="@style/wrap_content" />

        <HorizontalScrollView
            android:layout_marginLeft="10dip"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent"
            android:id="@+id/horizontalScrollView" >

            <LinearLayout
                android:gravity="center"
                style="@style/match_content">

                <ImageView
                    android:background="@drawable/y_comments_select"
                    android:src="@drawable/x_comments_black"
                   style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
                <ImageView
                    android:src="@drawable/x_comments_black"
                    style="@style/b_color_ring" />
            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>
        <TextView
        android:textColor="#cfcfcf"
        android:layout_width="match_parent"
        android:layout_height="1dip" />
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dip">
        <FrameLayout
            style="@style/b_comments_bottom_menu_main">
            <ImageButton
                android:src="@drawable/x_text"
                 style="@style/b_comments_bottom_menu_button"/>
        </FrameLayout>
        <FrameLayout
            style="@style/b_comments_bottom_menu_main">
            <ImageButton
                android:src="@drawable/x_graffiti"
                style="@style/b_comments_bottom_menu_button"/>
        </FrameLayout>
        <FrameLayout
            style="@style/b_comments_bottom_menu_main">
            <ImageButton
                android:src="@drawable/x_label"
                style="@style/b_comments_bottom_menu_button"/>
        </FrameLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>