<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_root"
    tools:context="com.orange.barrage.android.user.ui.user_home.InviteMyFriendActivity">

    <include layout="@layout/activity_view_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_marginLeft="36dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginRight="36dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/invitefriendtitle"
                    android:layout_alignTop="@+id/invitefriendtextview"
                    android:src="@drawable/invitefriendtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="可用邀请码"
                    android:id="@+id/invitefriendtextview"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/invitefriendtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ScrollView
                    android:scrollbars="vertical"
                    android:id="@+id/scrollview_layout"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/avail_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageView
                android:id="@+id/oversendview"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="36dp"
                android:src="@drawable/invitefriendtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="已发放"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/oversendview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <ScrollView
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/oversend_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</LinearLayout>
