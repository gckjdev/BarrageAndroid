<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="match_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--设计主界面下面按钮字体-->
    <style name="y_main_bttom_font" parent="match_content">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--通用红色按钮 -->
    <style name="b_button_color_red">
        <item name="android:background">@drawable/y_button_shape</item>
        <item name="android:text">34dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/y_activity_invite_code_5_height</item>
        <item name="android:layout_width">@dimen/y_activity_invite_code_1_width</item>
    </style>

    <style name="y_logn_all_denglu" parent="wrap_content" >
        <item name="android:layout_marginTop">14dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="y_main_view_icon" >
        <item name ="android:layout_height" >28dip</item>
        <item name = "android:layout_width">28dip</item>
        <item name="android:layout_marginRight">13dip</item>
        <item name="android:onClick">onClick</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--通用的文本编辑框风格-->
    <style name="b_common_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y_zhuche_2_height</item>
        <item name="android:ems">60</item>
        <item name="android:textColor">@color/b_font_black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="b_pop_photo_and_camera_linearlayout" parent="match_content" >
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="b_pop_photo_and_camera_font" parent="wrap_content">
        <item name="android:textColor">@color/b_font_black</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    
    <style name="comments" >
        <item name="android:layout_height">40.5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">20.5dip</item>
        <item name="android:paddingLeft">30.5dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="b_color_ring">
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">40dip</item>
    </style>

    <style name="b_comments_bottom_menu_main" parent="match_content">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="b_comments_bottom_menu_main_linear" parent="wrap_content">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="b_comments_botton_menu_main_Text" parent="wrap_content">
        <item name="android:textColor">@drawable/x_bottom_font</item>
    </style>
    <style name="b_comments_bottom_menu_button" parent="wrap_content">
        <item name="android:background">@color/b_color_alpha</item>
    </style>

    <style name="b_homepage_pop_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:paddingLeft">26dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/x_home_page_pop_item_bg</item>
    </style>

    <style name="b_homepage_pop_line">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#262626</item>
    </style>


    <style name="b_homepage_top_right_button">
        <item name="android:layout_width">44dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/b_color_alpha</item>
        <item name="android:layout_marginRight">@dimen/b_navigationbar_margin_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--所有限制TextView的统一标准，只显示一行，最大显示8个字符,可以获得焦点,可以设置跑马灯-->
    <style name="t_textview_limit">
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">8</item>
        <item name="android:focusable">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <!--我的主页中，用户名的一些属性 -->
    <style name="user_homenick">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 我的主页中，左边各个文本选项字体的大小，颜色 ,填充等-->
    <style name="user_homepage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- 我的主页中，右边的文本的字体的一些属性 -->
    <style name="user_homepage_right">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxEms">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
        <item name="android:textColor">#848484</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 我的主页中，右边箭头的一些属性-->
    <style name="user_homepage_imageview">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/user_home_more</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--搜索，添加好友，以及昵称设置，签名设置中的EditText与顶部的距离以及EditText的高度 -->
    <style name="nick_signature_common_settings">
        <item name="android:layout_height">@dimen/u_background</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- 个人资料中的布局中，LinerLayout中的一些共同的属性-->
    <style name="user_info_linearlayout_common">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/user_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/u_background</item>
    </style>
    <!--用户个人资料中，修改密码的文本框的一些共同属性-->
    <style name="user_modify_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_height">@dimen/u_background</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--设置中的风格设置，右边的箭头的一些共同属性-->
    <style name="user_setting_style">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="b_share_other_platform" parent="match_content">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="b_share_other_paltform_image" parent="wrap_content">

    </style>
    <style name="b_share_other_paltform_text" parent="wrap_content">
        <item name="android:layout_marginTop">11dip</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/b_font_black</item>
    </style>
    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>

    <!-- 对话框ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>

    </style>
</resources>
