<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="match_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <!--设计主界面下面按钮字体-->
    <style name="y_main_bttom_font" parent="match_content">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--第一个页面-->
    <style name="b_button_color_red">
        <item name="android:background">@drawable/y_button_shape</item>
        <item name="android:text">34dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/y_activity_invite_code_5_height</item>
        <item name="android:layout_width">@dimen/y_activity_invite_code_1_width</item>
    </style>

    <style name="y_logn_all_denglu" parent="wrap_content" >
        <item name="android:layout_marginTop">14dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
    </style>
    <style name="y_main_view_icon" >
        <item name ="android:layout_height" >28dip</item>
        <item name = "android:layout_width">28dip</item>
        <item name="android:layout_marginRight">13dip</item>
        <item name="android:onClick">onClick</item>
        <!--<item name="android:visibility">gone</item>
    --></style>
    <style name="b_edieText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y_zhuche_2_height</item>
        <item name="android:ems">10</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="b_pop_photo_and_camera_linearlayout" parent="match_content" >
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="b_pop_photo_and_camera_font" parent="wrap_content">
        <item name="android:textColor">@color/b_font_black</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    
    <style name="comments" >
        <item name="android:layout_height">@dimen/b_comments_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">51dip</item>
        <item name="android:background">@drawable/y_dotted_box</item>
        <item name="android:visibility">gone</item>
        <item name = "android:alpha">0.6</item>
        <item name="android:paddingRight">30dip</item>
    </style>

    <style name="b_color_ring">
        <item name="android:layout_marginLeft">14dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">40dip</item>
    </style>

    <style name="b_comments_bottom_menu_main" parent="match_content">

        <item name="android:layout_weight">1</item>

    </style>

    <style name="b_comments_bottom_menu_button" parent="wrap_content">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/b_color_alpha</item>
    </style>

    <style name="b_homepage_pop_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:paddingLeft">26dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="b_homepage_pop_line">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#262626</item>
    </style>

</resources>
