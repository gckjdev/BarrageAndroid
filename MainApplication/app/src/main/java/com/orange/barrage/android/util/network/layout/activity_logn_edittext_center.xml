<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/b_bg_color_gray"
    android:orientation="vertical">


    <TextView
        android:background="@color/y_inivite_code_pass"
        android:layout_width="match_parent"
        android:layout_height="1dip" />
    <EditText
        android:text="15625987607"
        android:layout_marginTop="@dimen/y_zhuche_1_height"
        style="@style/b_edieText"
        android:inputType="number"
        android:gravity="center"
        android:hint="@string/y_inputphone"
        android:id="@+id/id" >

        <requestFocus/>

    </EditText>

    <TextView
        android:background="@color/y_inivite_code_pass"
        android:layout_width="match_parent"
        android:layout_height="1dip" />

    <EditText
        android:inputType="textPassword"
        style="@style/b_edieText"
        android:gravity="center"
        android:text="111111"
        android:hint="@string/y_inputpwd"
        android:id="@+id/pwd" />
    <TextView
        android:background="@color/y_inivite_code_pass"
        android:layout_width="match_parent"
        android:layout_height="1dip" />

    <Button
        android:id="@+id/sendbutton"
        android:layout_marginTop="@dimen/y_activity_invite_code_3_height"
        android:text="@string/y_tijiao"
        android:onClick="onClickSend"
        style="@style/b_button_color_red"/>


</LinearLayout>